# See :: $ man i3status

general {
  colors = true
  interval = 5
}

order += "battery all"
order += "volume master"
order += "tztime local"

battery all {
  format = "BAT %percentage"
  separator_block_width = 20
}

volume master {
  format = "VOL: %volume"
  format_muted = "VOL: MUTED"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
  separator_block_width = 20
}

tztime local {
  format = "%d/%m/%y %H:%M"
  min_width = 120
  separator_block_width = 20
}
