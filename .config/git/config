; vim:ft=gitconfig

; Behaviour

[init]
  defaultBranch = main

[user]
  name = Gerson Ferreira
  email = gersonfaneto.dev@gmail.com
  ; signingKey = 

[commit]
  verbose = true
  ; gpgSign = true

[core]
  autocrlf = input
  whitespace = error
  fsync = none
  compression = 9
  preloadindex = true

[advice]
  addEmptyPathSpec = false
  pushNonFastFoward = false
  statusHints = false

[blame]
  coloring = highlightRecent
  date = relative

[diff]
  context = 3
  renames = copies
  interHunkContext = 10

[log]
  abbrevCommits = true
  graphColors = blue,yellow,cyan,magenta,green,red

[status]
  branch = true
  showStash = true
  showUntrackedFiles = all

[pager]
  diff = diff-so-fancy | $PAGER
  branch = false

[interactive]
  diffFilter = diff-so-fancy --patch
  singleKey = true

[push]
  default = current
  ; gpgSign = true
  followTags = true
  autoSetupRemote = true

[pull]
  default = current
  rebase = true

[submodule]
  fetchJobs = 16

[rebase]
  autoStash = true
  missingCommitsCheck = warn

[merge]
  tool = vimdiff

[mergetool]
  keepBackup = false

[mergetool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

; Colors

; [color "decorate"]
;   HEAD = red
;   branch = blue
;   tag = yellow
;   remoteBranch = magenta

[color "blame"]
  highlightRecent = black bold,1 year ago,white,1 month ago,default,7 days ago,blue

; [color "diff"]
;   meta       = black bold
;   frag       = magenta
;   context    = white
;   whitespace = yellow reverse

[color "branch"]
  current  = magenta
  local    = default
  remote   = yellow
  upstream = green
  plain    = blue

; Thirdy-Party

[diff-so-fancy]
  markEmptyLines = false

; URL Shorthand's

[url "git@github.com:gersonfaneto/"]
  insteadOf = "me:"

[url "git@github.com:"]
  insteadOf = "gh:"

; Aliases

[alias]
  it = "![[ ! -d ".git/" ]] && ( git init && git commit -m 'Ready... Set... Go!' --allow-empty ) || ( echo 'Project already exists!' && exit 0  )"

  cm  = commit
  cmm = commit --message
  cma = commit --ammend
  cme = commit --ammend --no-edit

  br  = branch
  brd = branch --delete

  df  = "!git diff --output-indicator-new=' ' --output-indicator-old=' '"
  dfs = df --cached

  cc  = checkout
  ccf = checkout --force

  sw  = switch
  swc = switch --create

  ad   = add
  ada  = add --all
  adp  = add --patch
  adu  = add --update
  adup = add --update --patch

  st  = status
  sts = status --short

  ft  = fetch
  fta = fetch --all
  ftp = fetch --prune

  ps = push
  pl = pull

  cl  = clone
  cls = clone --depth=1
  cln = clone --filter=blob:none
  clr = clone --recursive

  rb  = rebase
  rbi = rebase --interactive
  rbc = rebase --continue
  rba = rebase --abort
  rbt = rebase --edit-todo

  wt  = worktree
  wtl = worktree list
  wta = worktree add
  wtr = worktree remove

  lg = "!git log --graph --pretty=format:'%C(magenta)%h %C(white) %an  %ar%C(blue)  %D%n%s%n'"
