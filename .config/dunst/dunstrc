[global]
font = Fantasque Sans Mono 10  # Font family and size
format = "<b>%s</b>\n%b" # Formatting of the notification text
alignment = center       # Text alignment
allow_markup = yes       # Allow html-like styling...

frame_width = 1
frame_color = "#A19782"

sort = yes               # Order of appearance based on the urgency
indicate_hidden = yes    # Show counter for overlaps
show_age_threshold = -1  # Hide the notification lifespan

ignore_newline = no      # ...
bounce_freq = 0          # Similar to word-wrap
word_wrap = yes          # The original word-wrap

# The geometry of the notification window
width  = 300
height = 200
offset = 10x50
origin = top-right

transparency = 0         # ...
idle_threshold = 120     # Hold notification if the user is idle
monitor = 0              # Which monitor should display the notifications
follow = none            # Respect the rule above!
sticky_history = yes     # ...


line_height = 0          # ...

separator_height = 2     # Draw a line between notifications
separator_color = auto   # ...

padding = 8              # Between the text and the separator
horizontal_padding = 8   # ^ Likewise...

[urgency_low]
background = "#0B0806"
foreground = "#A19782"
frame_color = "#A19782"
timeout = 10

[urgency_normal]
background = "#0B0806"
foreground = "#A19782"
frame_color = "#A19782"
timeout = 10

[urgency_critical]
background = "#0B0806"
foreground = "#A19782"
frame_color = "#FB4961"
timeout = 0

