#!/bin/sh

# pls
# inspired by hlissner's hey

host=$(hostname)

while [ "$1" ]; do
  case $1 in
    help)
      printf "\033[0;32musage: \033[0;0mpls \033[38;5;8m[command]\n\n"
      printf "\033[0;32mavailable commands:\033[0;0m\n"
      printf "    check                 \033[38;5;8mrun 'nix flake check' on your nixos\n\033[0;0m"
      printf "    gc                    \033[38;5;8mcollect garbage\n\033[0;0m"
      printf "    home                  \033[38;5;8mrebuild home-manager config\n\033[0;0m"
      printf "    rebuild               \033[38;5;8mrebuild system config\n\033[0;0m"
      printf "    repl                  \033[38;5;8mopen a nix-repl with nixpkgs and nixos\n\033[0;0m"
      printf "    update \033[38;5;8m[input]        update specific input or all\n\033[0;0m"
      printf "    upgrade               \033[38;5;8mupdate all inputs and rebuild\n\033[0;0m"
      printf "    optimise              \033[38;5;8moptimise the nix store\n\033[0;0m"
      printf "    help                  \033[38;5;8mprint this help message\n"
      exit ;;
    check)
      nix flake check "$HOME/nixos"
      exit ;;
    gc)
      nix-collect-garbage
      notify-send -i "$HOME/nixos/nixos.png" "pls" "$host Finished garbage collection"
      exit ;;
    home)
      nix build "$HOME/nixos#homemanagerConfigurations.nixThelio.activationPackage" --impure && ./result/activate
      notify-send -i "$HOME/nixos/nixos.png" "pls" "$host home-manager config rebuilt "
      exit ;;
    home-work)
      nix build "$HOME/nixos#homemanagerConfigurations.nixWork.activationPackage" --impure && ./result/activate
      notify-send -i "$HOME/nixos/nixos.png" "pls" "$host home-manager config rebuilt "
      exit ;;
    home-min)
      nix build "$HOME/nixos#homemanagerConfigurations.minimalConfig.activationPackage" --impure && ./result/activate
      notify-send -i "$HOME/nixos/nixos.png" "pls" "$host home-manager config rebuilt "
      exit ;;
    home-vm)
      nix build "$HOME/nixos#homemanagerConfigurations.nixos.activationPackage" --impure --show-trace && ./result/activate
      notify-send -i "$HOME/nixos/nixos.png" "pls" "$host home-manager config rebuilt "
      exit ;;
    home-mac)
      nix build "$HOME/nixos#homemanagerConfigurations.nixM1.activationPackage" --impure && ./result/activate
      exit ;;
    rebuild)
      nixos-rebuild --use-remote-sudo "${2:-switch}" --flake "$HOME/nixos#"
      notify-send -i "$HOME/nixos/nixos.png" "pls" "$host nixos config rebuilt "
      exit ;;
    rebuild-vm)
      nixos-rebuild --use-remote-sudo "${2:-switch}" --flake "$HOME/nixos#"
      notify-send -i "$HOME/nixos/nixos.png" "pls" "$host nixos config rebuilt "
      exit ;;
    rebuild-mac)
      if [ $(which darwin-rebuild) ]; then
	      sudo darwin-rebuild "${2:-switch}" --flake "$HOME/nixos#Scotts-MacBook-Pro"
      else
        sudo nix run --experimental-features "nix-command flakes" nix-darwin/master#darwin-rebuild -- switch --flake "$HOME/nixos#Scotts-MacBook-Pro"
      fi
      exit ;;
    repl)
      [ ! -r /tmp/nixos-repl.nix ] && echo "builtins.getFlake (toString $HOME/nixos)" > /tmp/nixos-repl
      nix repl '<nixpkgs>' /tmp/nixos-repl
      exit ;;
    update)
      if [ "$2" ]; then
        nix flake lock --update-input "$2" "$HOME/nixos" --show-trace
      else
        nix flake update "$HOME/nixos" --show-trace
      fi
      notify-send -i "$HOME/nixos/nixos.png" "pls" "$host Finished update"
      exit ;;
    upgrade)
      nix flake update "$HOME/nixos"
      nixos-rebuild --use-remote-sudo "${2:-switch}" --flake "$HOME/nixos#"
      nix build "$HOME/nixos#homemanagerConfigurations.nixos.activationPackage" --impure && ./result/activate
      notify-send -i "$HOME/nixos/nixos.png" "pls" "$host Finished upgrade"
      exit ;;
    optimise)
      nix-store --optimise
      notify-send -i "$HOME/nixos/nixos.png" "pls" "$host Finished optimising nix store"
      exit ;;
    *)
      printf "\033[0;31merr: invalid command\n"
      exit ;;
  esac
done
